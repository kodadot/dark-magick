{
  "name": "@kodadot1/rubick",
  "version": "0.0.8",
  "private": true,
  "scripts": {
    "build": "rm -rf lib && tsc",
    "update": "npx npm-check-updates --filter /subsquid/ --upgrade && npm i -f",
    "db:migrate": "npx squid-typeorm-migration apply",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions --max-root-fields 50 --dumb-cache in-memory --dumb-cache-ttl 1000 --dumb-cache-size 100 --dumb-cache-max-age 1000",
    "test:unit": "mocha -r ts-node/register tests/unit/**.spec.ts"
  },
  "dependencies": {
    "@kodadot1/minimark": "^0.0.1-rc.10",
    "@subsquid/archive-registry": "3.3.2",
    "@subsquid/graphql-server": "4.6.0",
    "@subsquid/ss58": "2.0.2",
    "@subsquid/substrate-processor": "8.4.1",
    "@subsquid/typeorm-migration": "1.3.0",
    "@subsquid/typeorm-store": "1.5.1",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "md5": "^2.3.0",
    "nanoid": "3.3.4",
    "pg": "^8.12.0",
    "signale": "^1.4.0",
    "type-graphql": "^2.0.0-rc.1",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "3.1.2",
    "@subsquid/substrate-typegen": "8.1.0",
    "@subsquid/typeorm-codegen": "2.0.1",
    "@types/chai": "^4.3.16",
    "@types/md5": "^2.3.5",
    "@types/mocha": "^10.0.7",
    "@types/pg": "^8.11.6",
    "@types/signale": "^1.4.7",
    "chai": "^5.1.1",
    "mocha": "^10.6.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.5.3"
  }
}
